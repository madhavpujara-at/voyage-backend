{
    "name": "digital-kudos-backend",
    "version": "1.0.0",
    "description": "Backend for the Digital Kudos Wall application",
    "main": "dist/server.js",
    "scripts": {
        "build": "npm run prisma:generate && tsc && cpx \"src/infrastructure/database/generated/prisma/**/*\" \"dist/infrastructure/database/generated/prisma\"",
        "start": "npm run prisma:migrate:prod && npm run prisma:seed && npm run start:prod",
        "start:dev": "nodemon",
        "start:prod": "node dist/server.js",
        "test": "jest",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "prisma:generate": "prisma generate",
        "prisma:migrate:dev": "prisma migrate dev",
        "prisma:migrate:prod": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "prisma:migrate:reset": "prisma migrate reset",
        "prisma:seed": "npm run create:admin",
        "prepare": "husky install || true",
        "create:admin": "ts-node  prisma/seed/create-admin.ts",
        "seed:data": "ts-node prisma/seed/seed-data.ts"
    },
    "keywords": [
        "kudos",
        "api",
        "backend",
        "express",
        "typescript",
        "prisma"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^6.8.2",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "date-fns": "^3.6.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.5",
        "pino": "^9.1.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.12.12",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "cpx": "^1.5.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-mock-extended": "^4.0.0-beta1",
        "nodemon": "^3.1.10",
        "pino-pretty": "^11.1.0",
        "prettier": "^3.2.5",
        "prisma": "^6.8.2",
        "supertest": "^7.1.1",
        "ts-jest": "^29.1.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    }
}